
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<style>

    #header{
     
       height:50px;
    }
    #menu{
        background-color:blanchedalmond;
        width:450px;
        height:50px;
        float:left;
        margin-left:40px;
    }
    .menu{
        
       padding:10px;
       
         
    }

    .menu a{
        color:cadetblue;
        padding-left:20px;

    }

    .menu a:hover {
        color:white;
        }

    #logo{
        float:left;
        width:%100;
         height:50px;
    }

    #logo span{
       font-family:Calibri;
       font-size:48px;
    }


</style>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | eBlog</title>
</head>
<body>
    
        <div id="header">
            <div id="logo">
                <span>Simple Blog</span>
            </div>

            <div id="menu">
                <div class="menu">
                    <a href="@Url.RouteUrl("Home")">Home</a>
                    <a href="@Url.RouteUrl("Login")">Login</a>
                </div>


            </div>
        </div>
        <br />
        <div>
            <center>
                @RenderBody()
            </center>
        </div>
        @RenderSection("Scripts", false);
    
</body>
</html>
